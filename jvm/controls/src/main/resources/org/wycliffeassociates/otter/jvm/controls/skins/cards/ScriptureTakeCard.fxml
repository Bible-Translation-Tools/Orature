               <graphic>
                  <FontIcon iconLiteral="mdi-delete" />
               </graphic>
               <styleClass>
                  <String fx:value="card--scripture-take__btn" />
                  <String fx:value="card--scripture-take__btn--delete" />
               </styleClass>
            </JFXButton>
         </children>
      </HBox>
