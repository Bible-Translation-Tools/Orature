<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox styleClass="chapter-selector__controls">
            <children>
                <Button fx:id="prevChapterBtn"
                        styleClass="btn, btn--tertiary, btn--borderless, chapter-selector__btn-prev">
                    <graphic>
                        <FontIcon iconLiteral="mdi-chevron-left"/>
                    </graphic>
                </Button>
                <Button fx:id="chapterTitle" text="Chapter 2" styleClass="chapter-selector__title">
                    <graphic>
                        <FontIcon iconLiteral="mdi-file"/>
                    </graphic>
                </Button>
                <Button fx:id="nextChapterBtn"
                        styleClass="btn, btn--tertiary, btn--borderless, chapter-selector__btn-next">
                    <graphic>
                        <FontIcon iconLiteral="mdi-chevron-right"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</StackPane>
