<?import com.jfoenix.controls.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox styleClass="chapter-selector__controls">
            <children>
                <JFXButton fx:id="prevChapterBtn"
                           styleClass="btn, btn--primary, btn--borderless, chapter-selector__btn-prev">
                    <graphic>
                        <FontIcon iconLiteral="mdi-chevron-left"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="chapterTitle" text="Chapter 2" styleClass="chapter-selector__title">
                    <graphic>
                        <FontIcon iconLiteral="mdi-file"/>
                    </graphic>
                </JFXButton>
                <JFXButton fx:id="nextChapterBtn"
                           styleClass="btn, btn--primary, btn--borderless, chapter-selector__btn-next">
                    <graphic>
                        <FontIcon iconLiteral="mdi-chevron-right"/>
                    </graphic>
                </JFXButton>
            </children>
        </HBox>
    </children>
</StackPane>
